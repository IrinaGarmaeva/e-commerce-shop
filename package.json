{
  "name": "e-commerce-shop",
  "version": "1.0.0",
  "description": "e-commerce app built with The MERN stack",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "rimraf dist && npx tsc",
